{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es6",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "jsx": "preserve",
    "baseUrl": "packages",
    "paths": {
      "react": [ "common/node_modules/react" ],
      "react-dom": [ "common/node_modules/react-dom" ],
      "react-bootstrap": [ "common/node_modules/react-bootstrap" ],
      "mobx": [ "common/node_modules/mobx" ],
      "mobx-react": [ "common/node_modules/mobx-react" ],
      "@respace/*": [
        "*/src",
        "*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "node_modules",
    "dist",
    "**/typings/globals",
    "**/typings/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "forkChecker": true
  }
}
